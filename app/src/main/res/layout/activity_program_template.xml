<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProgramTemplate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/working_muscles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/brandon_black"
            android:text="Работающие мышцы:"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/time_work"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/brandon_black"
            android:text="Время на выполнение:"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/structure_work"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/brandon_black"
            android:text="Структура(кол-во серий,подходов,отдых):"
            android:textSize="18dp"
            />
    </LinearLayout>



        <ListView
            android:id="@+id/programs_listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




</LinearLayout>